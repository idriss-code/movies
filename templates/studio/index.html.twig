{% extends 'base.html.twig' %}

{% block title %}Studios - Movie Collection{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Studios</h1>
        <small class="text-muted">{{ pagination.getTotalItemCount }} studios</small>
    </div>

    {% if pagination.getTotalItemCount > 0 %}
        <div class="row g-4">
            {% for studio in pagination %}
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 studio-card">
                        <div class="card-body text-center">
                            {% if studio.logo and not (studio.logo matches '/wiki/' or studio.logo matches '/fandom/') %}
                                <img src="{{ studio.logo }}" class="studio-logo mb-3" 
                                     alt="{{ studio.name }}" loading="lazy"
                                     onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                                <div class="studio-placeholder mb-3" style="display: none;">
                                    <div class="studio-placeholder-icon">ðŸŽ¬</div>
                                    <div class="studio-placeholder-text">{{ studio.name|slice(0, 2)|upper }}</div>
                                </div>
                            {% else %}
                                <div class="studio-placeholder mb-3">
                                    <div class="studio-placeholder-icon">ðŸŽ¬</div>
                                    <div class="studio-placeholder-text">{{ studio.name|slice(0, 2)|upper }}</div>
                                </div>
                            {% endif %}
                            
                            <h5 class="card-title">{{ studio.name }}</h5>
                            <p class="card-text text-muted">
                                {{ studio.movies|length }} film{% if studio.movies|length > 1 %}s{% endif %}
                            </p>
                            
                            <a href="{{ path('app_studio_show', {'id': studio.id}) }}" 
                               class="btn btn-primary btn-sm">
                                Voir les films
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        {% import '_pagination_seo.html.twig' as pagination_seo %}
        <div class="mt-4">
            {{ pagination_seo.pagination_with_seo(pagination, 'app_studio_index', {}, null) }}
        </div>
    {% else %}
        <div class="text-center py-5">
            <h3 class="text-muted">Aucun studio trouvÃ©</h3>
        </div>
    {% endif %}
{% endblock %}