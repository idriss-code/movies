{% extends 'base.html.twig' %}

{% block title %}Studios - Movie Collection{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Studios</h1>
        <small class="text-muted">{{ pagination.getTotalItemCount }} studios</small>
    </div>

    {% if pagination.getTotalItemCount > 0 %}
        <div class="row g-4">
            {% for studio in pagination %}
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 studio-card">
                        <div class="card-body text-center">
                            {% if studio.logo %}
                                <img src="{{ studio.logo }}" class="studio-logo mb-3" 
                                     alt="{{ studio.name }}" loading="lazy">
                            {% else %}
                                <div class="text-muted fs-1 mb-3">üè¢</div>
                            {% endif %}
                            
                            <h5 class="card-title">{{ studio.name }}</h5>
                            <p class="card-text text-muted">
                                {{ studio.movies|length }} film{% if studio.movies|length > 1 %}s{% endif %}
                            </p>
                            
                            <a href="{{ path('app_studio_show', {'id': studio.id}) }}" 
                               class="btn btn-primary btn-sm">
                                Voir les films
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <div class="text-center py-5">
            <h3 class="text-muted">Aucun studio trouv√©</h3>
        </div>
    {% endif %}
{% endblock %}