{% extends 'base.html.twig' %}

{% block title %}{{ studio.name }} - Studios{% endblock %}

{% block body %}
    <div class="d-flex align-items-center mb-4">
        {% if studio.logo and not (studio.logo matches '/wiki/' or studio.logo matches '/fandom/') %}
            <img src="{{ studio.logo }}" class="studio-logo-large me-3" alt="{{ studio.name }}"
                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
            <div class="studio-placeholder-large me-3" style="display: none;">
                <div class="studio-placeholder-icon-large">üé¨</div>
                <div class="studio-placeholder-text-large">{{ studio.name|slice(0, 2)|upper }}</div>
            </div>
        {% else %}
            <div class="studio-placeholder-large me-3">
                <div class="studio-placeholder-icon-large">üé¨</div>
                <div class="studio-placeholder-text-large">{{ studio.name|slice(0, 2)|upper }}</div>
            </div>
        {% endif %}
        <div>
            <h1 class="h2 mb-0">{{ studio.name }}</h1>
            <p class="text-muted mb-0">
                {{ pagination.getTotalItemCount }} film{% if pagination.getTotalItemCount > 1 %}s{% endif %}
            </p>
        </div>
    </div>

    {% if pagination.getTotalItemCount > 0 %}
        <div class="row g-4">
            {% for movie in pagination %}
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 movie-card">
                        {% if movie.poster %}
                            <img src="{{ movie.poster|movie_poster }}" class="card-img-top movie-poster" 
                                 alt="{{ movie.title }}" loading="lazy">
                        {% else %}
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center movie-poster">
                                <span class="text-muted fs-1">üé¨</span>
                            </div>
                        {% endif %}
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ movie.title }}</h5>
                            <div class="text-muted small mb-2">
                                <div>{{ movie.year }}</div>
                                {% if movie.director %}
                                    <div>{{ movie.director.fullName }}</div>
                                {% endif %}
                            </div>
                            
                            <div class="mt-auto">
                                <a href="{{ path('app_movie_show', {'slug': movie.slug}) }}" 
                                   class="btn btn-primary btn-sm">Voir d√©tails</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        {% import '_pagination_seo.html.twig' as pagination_seo %}
        <div class="mt-4">
            {{ pagination_seo.pagination_with_seo(pagination, 'app_studio_show', {'id': studio.id}, null) }}
        </div>
    {% else %}
        <div class="text-center py-5">
            <h3 class="text-muted">Aucun film trouv√© pour ce studio</h3>
        </div>
    {% endif %}

    <div class="mt-4">
        <a href="{{ path('app_studio_index') }}" class="btn btn-secondary">
            ‚Üê Retour aux studios
        </a>
    </div>
{% endblock %}