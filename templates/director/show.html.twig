{% extends 'base.html.twig' %}

{% block title %}{{ director.fullName }} - R√©alisateurs{% endblock %}

{% block body %}
    <div class="d-flex align-items-center mb-4">
        <div class="director-avatar-large me-3">
            <span class="fs-1">üé¨</span>
        </div>
        <div>
            <h1 class="h2 mb-0">{{ director.fullName }}</h1>
            <p class="text-muted mb-0">
                {{ pagination.getTotalItemCount }} film{% if pagination.getTotalItemCount > 1 %}s{% endif %}
            </p>
        </div>
    </div>

    {% if pagination.getTotalItemCount > 0 %}
        <h3 class="h4 mb-3">Filmographie</h3>
        
        <div class="row g-4">
            {% for movie in pagination %}
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 movie-card">
                        {% if movie.poster %}
                            <img src="{{ movie.poster|movie_poster }}" class="card-img-top movie-poster" 
                                 alt="{{ movie.title }}" loading="lazy">
                        {% else %}
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center movie-poster">
                                <span class="text-muted fs-1">üé¨</span>
                            </div>
                        {% endif %}
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ movie.title }}</h5>
                            <div class="text-muted small mb-2">
                                <div>{{ movie.year }}</div>
                                {% if movie.studio %}
                                    <div>{{ movie.studio.name }}</div>
                                {% endif %}
                            </div>
                            
                            <div class="mt-auto">
                                <a href="{{ path('app_movie_show', {'id': movie.id}) }}" 
                                   class="btn btn-primary btn-sm">Voir d√©tails</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <div class="text-center py-5">
            <h3 class="text-muted">Aucun film trouv√© pour ce r√©alisateur</h3>
        </div>
    {% endif %}

    <div class="mt-4">
        <a href="{{ path('app_director_index') }}" class="btn btn-secondary">
            ‚Üê Retour aux r√©alisateurs
        </a>
    </div>
{% endblock %}