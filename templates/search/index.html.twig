{% extends 'base.html.twig' %}

{% block title %}Recherche{% if search_query %} : {{ search_query }}{% endif %} - Movie Collection{% endblock %}

{% block body %}
    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            <h1 class="h2 text-center mb-4">Recherche</h1>
            
            <form method="GET" action="{{ path('app_search') }}" class="mb-4">
                <div class="input-group input-group-lg">
                    <input type="search" class="form-control" name="q" 
                           placeholder="Rechercher un film, acteur, r√©alisateur ou studio..." 
                           value="{{ search_query }}" autofocus>
                    <button class="btn btn-primary" type="submit">
                        <span class="me-1">üîç</span> Rechercher
                    </button>
                </div>
                <div class="form-text text-center mt-2">
                    Recherche dans les titres de films, noms d'acteurs, r√©alisateurs et studios
                </div>
            </form>
        </div>
    </div>

    {% if search_query %}
        {% if results.getTotalItemCount > 0 %}
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h4">R√©sultats pour "{{ search_query }}"</h2>
                <small class="text-muted">{{ results.getTotalItemCount }} r√©sultat{% if results.getTotalItemCount > 1 %}s{% endif %}</small>
            </div>

            <div class="row g-4">
                {% for movie in results %}
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <div class="card h-100 movie-card">
                            {% if movie.poster %}
                                <img src="{{ movie.poster }}" class="card-img-top movie-poster" 
                                     alt="{{ movie.title }}" loading="lazy">
                            {% else %}
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center movie-poster">
                                    <span class="text-muted fs-1">üé¨</span>
                                </div>
                            {% endif %}
                            
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">{{ movie.title }}</h5>
                                <div class="text-muted small mb-2">
                                    <div>{{ movie.year }}</div>
                                    {% if movie.studio %}
                                        <div>{{ movie.studio.name }}</div>
                                    {% endif %}
                                    {% if movie.director %}
                                        <div>{{ movie.director.fullName }}</div>
                                    {% endif %}
                                </div>
                                
                                {% if movie.actors|length > 0 %}
                                    <div class="mb-2">
                                        <small class="text-muted">
                                            {% for actor in movie.actors|slice(0, 2) %}
                                                {{ actor.fullName }}{% if not loop.last %}, {% endif %}
                                            {% endfor %}
                                            {% if movie.actors|length > 2 %}
                                                <span class="text-muted">...</span>
                                            {% endif %}
                                        </small>
                                    </div>
                                {% endif %}
                                
                                <div class="mt-auto">
                                    <a href="{{ path('app_movie_show', {'id': movie.id}) }}" 
                                       class="btn btn-primary btn-sm">Voir d√©tails</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="d-flex justify-content-center mt-4">
                {{ knp_pagination_render(results) }}
            </div>
        {% else %}
            <div class="text-center py-5">
                <h3 class="text-muted">Aucun r√©sultat trouv√©</h3>
                <p class="text-muted">Aucun film ne correspond √† votre recherche "{{ search_query }}".</p>
                <p class="text-muted">
                    <small>
                        Conseils : v√©rifiez l'orthographe, utilisez des mots-cl√©s plus g√©n√©raux, 
                        ou essayez le nom d'un acteur ou r√©alisateur.
                    </small>
                </p>
            </div>
        {% endif %}
    {% else %}
        <div class="text-center py-5">
            <h3 class="text-muted">Commencez votre recherche</h3>
            <p class="text-muted">Utilisez le champ ci-dessus pour rechercher des films, acteurs, r√©alisateurs ou studios.</p>
        </div>
    {% endif %}
{% endblock %}