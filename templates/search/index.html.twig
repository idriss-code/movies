{% extends 'base.html.twig' %}

{% block title %}
    {% if search_query %}
        {{ 'search.title_with_query'|trans({'%query%': search_query}) }}
    {% else %}
        {{ 'search.title'|trans }}
    {% endif %} - {{ 'nav.brand'|trans }}
{% endblock %}

{% block body %}
    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            <h1 class="h2 text-center mb-4 text-primary">{{ 'search.title'|trans }}</h1>
            
            <form method="GET" action="{{ path('app_search') }}" class="mb-4">
                <div class="search-container position-relative">
                    <input type="search" class="form-control form-control-lg search-input" name="q" 
                           placeholder="{{ 'search.placeholder'|trans }}" 
                           value="{{ search_query }}" autofocus>
                    {% if search_query %}
                        <button type="button" class="btn-clear-search" onclick="clearSearch()">
                            <i class="bi bi-x"></i>
                        </button>
                    {% endif %}
                    <button class="btn btn-primary btn-lg search-btn" type="submit">
                        {{ 'search.button'|trans }}
                    </button>
                </div>
                <div class="search-help-text">
                    {{ 'search.help_text'|trans }}
                </div>
            </form>
        </div>
    </div>

    {% if search_query %}
        {% if results.getTotalItemCount > 0 %}
            <div class="search-results-header">
                <div class="d-flex justify-content-between align-items-center">
                    <h2 class="search-results-title h4">{{ 'search.results_for'|trans({'%query%': search_query}) }}</h2>
                    <div class="search-results-count">{{ 'search.results_count'|trans({'%count%': results.getTotalItemCount}) }}</div>
                </div>
            </div>

            <div class="row g-4">
                {% for movie in results %}
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <div class="card h-100 movie-card">
                            {% if movie.poster %}
                                <img src="{{ movie.poster|movie_poster }}" class="card-img-top movie-poster" 
                                     alt="{{ movie.title }}" loading="lazy">
                            {% else %}
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center movie-poster">
                                    <span class="text-muted fs-1">ðŸŽ¬</span>
                                </div>
                            {% endif %}
                            
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">{{ movie.title }}</h5>
                                <div class="text-muted small mb-2">
                                    <div>{{ movie.year }}</div>
                                    {% if movie.studio %}
                                        <div>{{ movie.studio.name }}</div>
                                    {% endif %}
                                    {% if movie.director %}
                                        <div>{{ movie.director.fullName }}</div>
                                    {% endif %}
                                </div>
                                
                                {% if movie.actors|length > 0 %}
                                    <div class="mb-2">
                                        <small class="text-muted">
                                            {% for actor in movie.actors|slice(0, 2) %}
                                                {{ actor.fullName }}{% if not loop.last %}, {% endif %}
                                            {% endfor %}
                                            {% if movie.actors|length > 2 %}
                                                <span class="text-muted">...</span>
                                            {% endif %}
                                        </small>
                                    </div>
                                {% endif %}
                                
                                <div class="mt-auto">
                                    <div class="d-flex gap-2">
                                        <a href="{{ path('app_movie_show', {'id': movie.id}) }}" 
                                           class="btn btn-primary btn-sm flex-grow-1">{{ 'movie.details'|trans }}</a>
                                        {% if movie.downloadLink %}
                                            <a href="{{ movie.downloadLink }}" 
                                               class="btn btn-success btn-sm" 
                                               title="{{ 'movie.download'|trans }}">
                                                <i class="bi bi-download"></i>
                                            </a>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="d-flex justify-content-center mt-4">
                {{ knp_pagination_render(results) }}
            </div>
        {% else %}
            <div class="no-results-container">
                <h3>{{ 'search.no_results_title'|trans }}</h3>
                <p>{{ 'search.no_results_text'|trans({'%query%': search_query}) }}</p>
                <p>
                    <small>{{ 'search.no_results_tips'|trans }}</small>
                </p>
            </div>
        {% endif %}
    {% else %}
        <div class="no-results-container">
            <h3>{{ 'search.start_search_title'|trans }}</h3>
            <p>{{ 'search.start_search_text'|trans }}</p>
        </div>
    {% endif %}
{% endblock %}