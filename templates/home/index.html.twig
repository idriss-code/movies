{% extends 'base.html.twig' %}

{% block title %}{{ 'nav.home'|trans }} - {{ 'nav.brand'|trans }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 text-primary">{{ 'home.title'|trans }}</h1>
        <small class="text-muted">{{ 'home.total_movies'|trans({'%count%': pagination.getTotalItemCount}) }}</small>
    </div>

    {% if pagination.getTotalItemCount > 0 %}
        <div class="row g-4">
            {% for movie in pagination %}
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 movie-card">
                        {% if movie.poster %}
                            <img src="{{ movie.poster }}" class="card-img-top movie-poster" 
                                 alt="{{ movie.title }}" loading="lazy">
                        {% else %}
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center movie-poster">
                                <span class="text-muted fs-1">ðŸŽ¬</span>
                            </div>
                        {% endif %}
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ movie.title }}</h5>
                            <div class="text-muted small mb-2">
                                <div>{{ movie.year }}</div>
                                {% if movie.studio %}
                                    <div>{{ movie.studio.name }}</div>
                                {% endif %}
                            </div>
                            
                            <div class="mt-auto">
                                <div class="d-flex gap-2">
                                    <a href="{{ path('app_movie_show', {'id': movie.id}) }}" 
                                       class="btn btn-primary btn-sm flex-grow-1">{{ 'movie.details'|trans }}</a>
                                    {% if movie.downloadLink %}
                                        <a href="{{ movie.downloadLink }}" 
                                           class="btn btn-success btn-sm" 
                                           title="{{ 'movie.download'|trans }}"
                                           target="_blank">
                                            <i class="bi bi-download"></i>
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <div class="text-center py-5">
            <h3 class="text-muted">{{ 'common.no_movies'|trans }}</h3>
            <p class="text-muted">{{ 'common.empty_collection'|trans }}</p>
        </div>
    {% endif %}
{% endblock %}