{% extends 'base.html.twig' %}

{% block title %}Accueil - Movie Collection{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Films r√©cents</h1>
        <small class="text-muted">{{ pagination.getTotalItemCount }} films au total</small>
    </div>

    {% if pagination.getTotalItemCount > 0 %}
        <div class="row g-4">
            {% for movie in pagination %}
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 movie-card">
                        {% if movie.poster %}
                            <img src="{{ movie.poster }}" class="card-img-top movie-poster" 
                                 alt="{{ movie.title }}" loading="lazy">
                        {% else %}
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center movie-poster">
                                <span class="text-muted fs-1">üé¨</span>
                            </div>
                        {% endif %}
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ movie.title }}</h5>
                            <div class="text-muted small mb-2">
                                <div>{{ movie.year }}</div>
                                {% if movie.studio %}
                                    <div>{{ movie.studio.name }}</div>
                                {% endif %}
                            </div>
                            
                            <div class="mt-auto">
                                <a href="{{ path('app_movie_show', {'id': movie.id}) }}" 
                                   class="btn btn-primary btn-sm">Voir d√©tails</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="d-flex justify-content-center mt-4">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <div class="text-center py-5">
            <h3 class="text-muted">Aucun film trouv√©</h3>
            <p class="text-muted">La collection de films est vide.</p>
        </div>
    {% endif %}
{% endblock %}